<div class="container py-5">
    <h1 class="mb-4">Sign Up</h1>
    <div class="row d-flex align justify-content-center h-100">
    <div class="card" style="max-width: 25rem;">
        <div class="card-body">
        <form class="signup-form">
            <div class="my-4">
            <div class="form-outline">
                <input type="text" id="name-signup" class="form-control" />
                <label class="form-label" for="name">Name</label>
            </div>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
            <input type="email" id="email-signup" class="form-control" />
            <label class="form-label" for="email">Email address</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
            <input type="password" id="password-signup" class="form-control" />
            <label class="form-label" for="password">Password</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="my-4 btn btn-primary btn-lg">Sign up</button>
        </form>
    </div>
    </div>
</div>

<script src="./js/signup.js"></script>