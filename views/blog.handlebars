<div class="container" style="width: 45rem;">
    <div class="card">
    <div class="card-body">
        <h3 class="card-title">
        {{blog.title}}
        </h3>
        <h4 class="card-subtitle mb-2 text-muted">
            Posted by {{blog.user_name}} {{format_date blog.date_created}}
        </h4>
        <p class="card-text">
        {{blog.content}}
        </p>
    </div>
    </div>

    {{#if blog.comments.length}}
    <div class="mt-3">
    <h2>Comments:</h2>
    </div>
    {{/if}}

    {{#if blog.comments.length}}
    {{#each blog.comments as |comment|}}
        <div class="card">
        <div class="card-body">
            <p>
            {{comment.content}}
            </p>
            <p>
            {{comment.user.name}}, {{format_date comment.date.date_created}}
            </p>
        </div>
        </div>
    {{/each}}
    {{/if}}
    
    {{#if blog.comment.length}}
        <div>
        <h2 class="text-center pt-3">We wanna hear your thoughts!</h2>
        </div>
    {{/if}}

    <form class="form comment-post" autocomplete="off" id="comment-form">
    <div class="form-group">
        <label for="comment-title"> </label>
    </div>
    <div class="form-group">
        <textarea type="text" id="comment-typed" class="form-control"></textarea>
        <div id="passwordHelpBlock" class="form-text py-2">
        Post your comment on the text field.
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>
    
</div>

<script src="./js/blog.js"></script>