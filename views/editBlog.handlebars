<div class="container py-5" style="width: 45rem;">
    <div class="row">
        <div class="card">
            <form class="blog-post" autocomplete="off">
                <h2 class="my-4 text-center card-title">Edit this blog</h2>
                <div class="card-body">
                    <div class="mb-3">
                    <label for="blog-title" class="form-label">Title:</label>
                    <textarea type="text" class="form-control" id="blog-title-typed"
                    value="{{blog.title}}"></textarea>
                    </div>

                    <div class="mb-3">
                    <label for="blog-content" class="form-label">Your Entry:</label>
                    <textarea type="text" class="form-control" id="blog-content-typed" rows="3"></textarea>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button class="btn btn-primary me-md-2" type="submit">Update post</button>
                    <button class="btn btn-danger" type="submit">Delete post</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/editblog.js"></script>