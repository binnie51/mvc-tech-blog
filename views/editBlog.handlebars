<div class="container py-5" style="width: 45rem;">
    <div class="row">
        <div class="card">
            <form class="edit-blog-post" autocomplete="off">
                <h2 class="my-4 text-center card-title">Edit this blog</h2>
                <div class="card-body">
                    <div class="mb-3">
                    <label for="blog-title" class="form-label">Title:</label>
                    <input type="text" class="form-control" id="blog-title-typed" placeholder="Type your entry here" value="{{blog.title}}"/>
                        
                    
                    </div>

                    <div class="mb-3">
                    <label for="blog-content" class="form-label">Your Entry:</label>
                    <textarea type="text" class="form-control" id="blog-content-typed" placeholder="Type your entry here">
                        {{blog.content_blog}}
                    </textarea>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button class="btn btn-primary me-md-2 blog-update" type="submit">Update post</button>
                    <button class="btn btn-danger blog-delete-btn" type="submit">Delete post</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{#if logged_in}}
<script src="/js/editblog.js"></script>
{{/if}}